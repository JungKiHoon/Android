    android:id="@+id/activity_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".exam.FragmentExamActivity">

    <fragment
        android:id="@+id/fragment_color_list"
        android:name="com.example.myapplication.exam.ColorListFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <fragment
        android:id="@+id/fragment_BColor"
        android:name="com.example.myapplication.exam.BColorFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
